getgenv().Config = {
    ["Team"] = "Marines"
}
repeat
    pcall(function()
            task.wait()
                if game:GetService("Players").LocalPlayer.PlayerGui:WaitForChild("Main"):FindFirstChild("ChooseTeam") then
                    if getgenv().Config["Team"] == "Pirates" then
                        for r, v in pairs(
                            getconnections(
                                game:GetService("Players").LocalPlayer.PlayerGui.Main.ChooseTeam.Container.Pirates.Frame.TextButton.Activated
                            )
                        )   
                    do
                        v.Function()
                    end
                elseif getgenv().Config["Team"] == "Marines" then
                    for r, v in pairs(
                        getconnections(
                            game:GetService("Players").LocalPlayer.PlayerGui.Main.ChooseTeam.Container.Marines.Frame.TextButton.Activated
                        )
                    ) do
                        v.Function()
                    end
                else
                    for r, v in pairs(
                        getconnections(
                            game:GetService("Players").LocalPlayer.PlayerGui.Main.ChooseTeam.Container.Pirates.Frame.TextButton.Activated
                        )
                    ) 
                    do
                        v.Function()
                    end
                end
            end
        end)
